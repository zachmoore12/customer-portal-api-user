{
  "name": "customer-portal-user-api",
  "version": "1.0.0",
  "description": "User Authentication API",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zachmoore12/customer-portal-user-api.git"
  },
  "author": "Zach Moore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zachmoore12/customer-portal-user-api/issues"
  },
  "homepage": "https://github.com/zachmoore12/customer-portal-user-api#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^5.0.1",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "express-validator": "^2.20.8",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.2.1",
    "jwt-simple": "^0.5.1",
    "moment-timezone": "^0.5.13",
    "mongoose": "^4.9.7",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pm2": "^2.4.6",
    "swagger-tools": "0.10.1",
    "uuid": "^3.1.0",
    "yarn": "^1.7.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.7",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^4.0.2",
    "gulp-util": "^3.0.8",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./index.js",
    "dev": "nodemon ./index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  }
}
